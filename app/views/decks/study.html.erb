<% provide(:title, "Study " + @deck.title) %>
<div class="row">
  <div class="span12">
    <%if @card.present? %>
      <p>
      <strong>Status: </strong><%= display_card_status @card.status %>
      <strong>Study Count: </strong><%= display_card_study_count @card.study_count %>
      <strong>Remaining Cards: </strong><span class="badge"><%= @cards_count %></span></p>
      <hr>
      <div class="well">
        <h1><%= @card.front %></h1><br>
        <button type="button" class="btn" data-toggle="collapse" data-target="#back">
          Show Answer
        </button>
      </div>
      <div id="back" class="collapse">
        <div class="well">
          <p><strong><%= @card.back %></strong></p>
          <%= link_to_eijiro @card.front if Rails.env.staging? %>
        </div>
      </div>
      <p>
      <%= link_to 'Again', again_this_card_deck_path(@deck), class: "btn btn-danger", title: "20 minutes later", rel: "tooltip" %>
      <%= link_to 'Hard', tommorow_this_card_deck_path(@deck), class: "btn btn-warning", title: "1 day later", rel: "tooltip" %>
      <%= link_to 'Medium', three_days_this_card_deck_path(@deck), class: "btn btn-success", title: "3 days later", rel: "tooltip" %>
      <%= link_to 'Easy', a_week_this_card_deck_path(@deck), class: "btn btn-info", title: "1 week later", rel: "tooltip" %>
      <%= link_to 'Almost Done', a_month_this_card_deck_path(@deck), class: "btn btn-primary", title: "1 month later", rel: "tooltip" %>
      <%= link_to 'Done', never_this_card_deck_path(@deck), class: "btn btn-inverse", title: "Never study again", rel: "tooltip" %>
      </p>
    <% else %>
      <h1>No card to study! Wow!</h1>
    <% end %>
  </div>
</div>
