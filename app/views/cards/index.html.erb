<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>Listing cards</h1>
    </div>
    <%= form_tag deck_cards_path(@deck), method: :get, class: "form-search" do %>
      <%= search_field_tag :keyword , nil, placeholder: "Keyword", class: "input-medium search-query"%>
      <%= submit_tag "Search", class: "btn" %>
    <% end %>
    <p>
    <% if @keyword.present? %>
      <strong>Keyword: </strong><span class="label"><%= @keyword %></span>
      <strong>Results: </strong><span class="badge"><%= @cards.count %></span>
    <% end %>
    <%= link_to 'New Card', new_deck_card_path(@deck) %>
    </p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Front</th>
          <th>Back</th>
          <th>Study Count</th>
          <th>Status</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td><%= card.id %></td>
            <td><%= card.front %></td>
            <td><%= card.back %></td>
            <td><%= display_card_study_count card.study_count %></td>
            <td><%= display_card_status card.status %></td>
            <td><%= link_to 'Show', deck_card_path(@deck, card), class: "btn" %></td>
            <td><%= link_to 'Edit', edit_deck_card_path(@deck, card), class: "btn" %></td>
            <td><%= link_to 'Destroy', deck_card_path(@deck, card), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br />


    <%= will_paginate @cards %>
  </div>
</div>
